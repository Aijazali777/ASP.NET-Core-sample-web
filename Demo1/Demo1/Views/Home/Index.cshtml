@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees List";
}

    @foreach(var emp in Model)
    {
        <div class="card m-3">
            <div class="card-header">
                <h3>@emp.Name</h3>
            </div>
            <img width="300" height="300" class="card-img-top" src="~/images/man2.jpg" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" asp-route-id="@emp.Id" class="btn btn-primary">Show</a>
                <a href="#" class="btn btn-success">View</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class=" btn btn-danger">Delete</a>
            </div>
        </div>
    }

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}